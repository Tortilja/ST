@model IEnumerable<ST.Models.Event>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Event List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="Event" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp;Create New Event
            </a>

        </div>
    </div>
    @if(Model.Count() > 0 ){
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Event Title
                    </th>
                    <th>
                        Event ShortDescription
                    </th>
                    <th>
                        Option
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Event_Title</td>
                        <td width="30%">@obj.Event_ShortDescription</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Event" asp-route-Id="@obj.Event_ID" asp-action="Upsert" class="btn btn-primary">
                                    <i class="fa-solid fa-pen-to-square"></i> &nbsp;Edit
                                </a>
                                <a asp-controller="Event" asp-route-Id="@obj.Event_ID" asp-action="Delete" class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i> &nbsp;Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }else{
        <p>No Event Exist</p>
    }
</div>
