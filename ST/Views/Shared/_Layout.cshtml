<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ST</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/icon_animation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<style>
    .jumbotron{
        background-size: cover;
    }
</style>
<body>
    <header>
        <div class="jumbotron ">
            <img class="img-fluid" src="@WC.Logo" />
        </div>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ST</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ImageGalleryUI" asp-action="Index">Gallery</a>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">User Interface</a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ImageGalleryUI" asp-action="Index">Gallery</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="CompetitionRegistrationUI" asp-action="Index">Competition Registration</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="AboutUI" asp-action="Index">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="SponsorUI" asp-action="Index">Sponsor</a>
                                </li>
                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">Administration Panel</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Event" asp-action="Index">Event</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="ImageGallery" asp-action="Index">Gallery</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="Sponsor" asp-action="Index">Sponsor</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="CompetitionRegistration" asp-action="Index">Competition Registration</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark dropdown-item" asp-area="" asp-controller="About" asp-action="Index">About</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            <div class="SocialNetworks">
                <a href="https://www.facebook.com/sebezu.trase">
                    <i class="icon fa-brands fa-facebook bounce fa-2xl"></i>
                </a>
                <a href="">
                    <i class="icon fa-brands fa-tiktok bounce fa-2xl"></i>
                </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
