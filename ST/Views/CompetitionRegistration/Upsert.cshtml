@model ST.Models.ViewModels.AP.CompetitionRegistrationVM
@{
    var title = "Add Competition Registration";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.CompetitionRegistration.Competition_Registration_ID != 0)
    {
        title = "Edit Competition Registration";
        <input asp-for="CompetitionRegistration.Competition_Registration_ID" hidden />
    }
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompetitionRegistration.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompetitionRegistration.Name" class="form-control" />
                        <span asp-validation-for="CompetitionRegistration.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompetitionRegistration.Surname"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompetitionRegistration.Surname" class="form-control" />
                        <span asp-validation-for="CompetitionRegistration.Surname" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompetitionRegistration.Phone_Number"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompetitionRegistration.Phone_Number" class="form-control" />
                        <span asp-validation-for="CompetitionRegistration.Phone_Number" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CompetitionRegistration.Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CompetitionRegistration.Email" class="form-control" />
                        <span asp-validation-for="CompetitionRegistration.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.CompetitionRegistration.Competition_Registration_ID != 0)
                            {
                                <input type="submit" class="btn btn-info w-100" value="Update" />

                            }
                            else
                            {
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Insert" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fa-solid fa-right-to-bracket"></i>&nbsp;Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_Validationscriptspartial" />
    }
    }


