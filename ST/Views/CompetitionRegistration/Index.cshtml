@model IEnumerable<ST.Models.CompetitionRegistration>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Competition Registration List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="CompetitionRegistration" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp;Create New Event
            </a>

        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name 
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        E-Mail
                    </th>
                    <th>
                        Option
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">@obj.Name</td>
                        <td width="25%">@obj.Surname</td>
                        <td width="25%">@obj.Phone_Number</td>
                        <td width="25%">@obj.Email</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="CompetitionRegistration" asp-route-Id="@obj.Competition_Registration_ID" asp-action="Upsert" class="btn btn-primary">
                                    <i class="fa-solid fa-pen-to-square"></i> &nbsp;Edit
                                </a>
                                <a asp-controller="CompetitionRegistration" asp-route-Id="@obj.Competition_Registration_ID" asp-action="Delete" class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i> &nbsp;Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Competition Registration Exist</p>
    }
</div>
